<Window x:Class="RestaurantHelper.CustomDialog.CustomConfirmacion"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Dialog" Height="200" Width="400">
    <Grid>
        <TextBlock Text="¿Qué acción desea realizar?" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="10"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Content="Modificar" Width="100" Margin="10" Click="ModifyButton_Click"/>
            <Button Content="Terminar" Width="100" Margin="10" Click="TerminateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
